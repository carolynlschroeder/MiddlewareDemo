@model List<MiddlewareDemo.ViewModels.ImageModel>
@{
    ViewData["Title"] = "Image Gallery";
}

<h2>Image Gallery</h2>
@for (var i = 0; i < Model.Count; i += 3)
{
    <div class="row gallerypadding">
        @for (int j = i; j <= Math.Min(2 + i, Model.Count - 1); j++)
        {
            <div class="col-md-3">
                <div><img src='@Url.Action("GetGalleryImage", "Gallery", new {id = @Model[j].ImageName})' /></div>
            </div>
        }
    </div>
}
